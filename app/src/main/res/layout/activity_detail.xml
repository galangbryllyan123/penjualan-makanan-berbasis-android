<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gambarDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/judulDetail"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/gambarDetail"
            android:textStyle="bold"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="Judul" />

        <TextView
            android:id="@+id/rupiahDetail"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/judulDetail"
            android:layout_marginLeft="@dimen/padding"
            android:text="Harga Rp. "/>

        <TextView
            android:id="@+id/hargaDetail"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/judulDetail"
            android:layout_toRightOf="@+id/rupiahDetail"
            android:text="0" />

        <TextView
            android:id="@+id/deskripsiDetail"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hargaDetail"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="@dimen/padding"
            android:text="Deskripsi" />

    </RelativeLayout>
</ScrollView>