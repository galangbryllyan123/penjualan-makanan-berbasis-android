<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cemilanku"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.cemilanku.UpdateActivity"
            android:theme="@style/AppThemeLogin" />
        <activity
            android:name="com.example.cemilanku.RegisterActivity"
            android:theme="@style/AppThemeLogin" />
        <activity
            android:name="com.example.cemilanku.LoginActivity"
            android:theme="@style/AppThemeLogin" />
        <activity
            android:name="com.example.cemilanku.DetailActivity"
            android:theme="@style/AppThemeLogin" />
        <activity
            android:name="com.example.cemilanku.BayarActivity"
            android:theme="@style/AppThemeLogin" />
        <activity
            android:name="com.example.cemilanku.CheckoutActivity"
            android:theme="@style/AppThemeLogin" />
        <activity android:name="com.example.cemilanku.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.cemilanku.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeAction" />
    </application>

</manifest>